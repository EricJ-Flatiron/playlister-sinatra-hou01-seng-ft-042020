<h1>Genre Info</h1>

<h4>Name:</h4>
    <p>
    <%=@genre.name %>
    </p>

<h4>Songs:</h4>
<p>

<% @genre.songs.each do |song| %>
<li>
    <a href="/songs/<%= song.slug%>">
    <%= song.name %>
</a>
</li>
<% end %>
</p>

<h4>Artists:</h4>
    <p>
    <li>
    <% @genre.artists.each do |artist| %>
        <a href="/artists/<%= artist.slug%>">
        <%= artist.name %>
    </a>
    </li>
    <% end %>
    </p> 
