<h1>Artist Info</h1>

<h4>Name:</h4>
    <p>
    <%=@artist.name %>
    </p>

<h4>Songs:</h4>
    <ul>
    <% @artist.songs.each do |song| %>
    <li>
    <a href="/songs/<%= song.slug %>">
        <%= song.name %>
    </a></li>
    <% end %>

    </ul>    

<h4>Genres:</h4>
    <ul>
    
    <% @artist.genres.each do |genre| %>
        <li>
        <a href="/genres/<%= genre.slug%>">
        <%= genre.name %>
        </a></li>
    <% end %>
    </ul>